{% apply spaceless %}
<?xml version="1.0" encoding="utf-8"?>
<message xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
    <rooms hotelId="{{ partner.identifier }}" hotelName="{{ partner.name }}">
        {% for product in products -%}
            <room code="{{ product.identifier }}" name="{{ product.name }}">
                <rate code="{{ ratePlan }}" name="{{ ratePlanName }}" regime="{{ ratePlanRegime }}" />
            </room>
        {%- endfor %}
    </rooms>
</message>
{% endapply %}
